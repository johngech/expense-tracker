generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  expenses  Expense[]

  @@map("users")
}

model Expense {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Decimal  @db.Decimal(10, 2)
  category    String
  note        String?
  expenseDate DateTime
  createdAt   DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])

  @@map("expenses")
}
